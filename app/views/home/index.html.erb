<p id="notice"><%= notice %></p>

<h1>Twats</h1>

<%= link_to 'New Twat', new_twat_path %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th>Foto</th>
      <th>Likes</th>
      <th>Retweets</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @twats.each do |twat| %>
      <tr>
        <td><%= twat.name %></td>
        <td><%= twat.user %></td>
        <td><%= twat.user.photo %></td>
        <td><%= @likes.where(twat_id:twat.id).count %></td>
        <td></td>
        <td><%= link_to 'Show', twat %></td>
        <td><%= link_to 'Edit', edit_twat_path(twat) %></td>
        <td><%= link_to 'Destroy', twat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  <div class="row">
    <div class="col">
      <%= paginate @twats %>
    </div>
  </div>
<br>
